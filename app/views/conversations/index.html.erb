<h1>Listing conversations</h1>

<table>
  <tr>
    <th>ResourceId</th>
    <th>Label</th>
    <th>Last Updated</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @conversations.sort{|a,b| b.lastUpdated <=> a.lastUpdated}.each do |conversation| %>
  <tr>
    <td><%= conversation.resourceId %></td>
    <td><%= conversation.label %></td>
    <td><%= conversation.lastUpdated %></td>
    <td><%= link_to 'Show', conversation %></td>
    <td><%= link_to 'Edit', edit_conversation_path(conversation) %></td>
    <td><%= link_to 'Destroy', conversation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

