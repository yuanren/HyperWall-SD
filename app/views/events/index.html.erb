<h1>Listing events</h1>

<table>
  <tr>
    <th>EventId</th>
    <th>Label</th>
    <th>hazard</th>
    <th>dateTime</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.eventId %></td>
    <td><%= event.label %></td>
    <td><%= event.hazard %></td>
    <td><%= event.dateTime %></td>  
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

