<h1>Listing messages</h1>

<table>
  <tr>
    <th>ResourceId</th>
    <th>ConversationResourceId</th>
    <th>FromResourceId</th>
    <th>Payload</th>
    <th>ToResourceId</th>
    <th>DateTime</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @messages.each do |message| %>
  <tr>
    <td><%= message.resourceId %></td>
    <td><%= message.conversationResourceId %></td>
    <td><%= message.fromResourceId %></td>
    <td><%= message.payload %></td>
    <td><%= message.toResourceId %></td>
    <td><%= message.dateTime %></td>
    <td><%= link_to 'Show', message %></td>
    <td><%= link_to 'Edit', edit_message_path(message) %></td>
    <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

